<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Priya"
        android:id="@+id/tvName"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs. 0"
        android:id="@+id/tvAmount"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="More to add or sub"
        android:id="@+id/etAmountToBeAddedOrSubtracted"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sbChooseAmount"
        android:max="10000"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take"
            android:id="@+id/rbTake" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give"
            android:id="@+id/rbGive" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nothing to Take or Give"
            android:id="@+id/rbDone" />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btnUpdate"
        android:textColor="@color/switch_thumb_normal_material_light"
        android:background="@color/tabsScrollColor"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"
         />
</LinearLayout>
